<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#b5555555" 
    android:orientation="vertical"
    android:id="@+id/parent">
<LinearLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/contentll"
    android:gravity="center"
    android:background="@drawable/search_user_popup_corner"
    android:orientation="vertical">
    <Button android:id="@+id/btnRanks" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="音乐榜单" android:focusable="true" android:focusableInTouchMode="true"
         android:textSize="20sp" android:paddingLeft="90dp" android:paddingRight="90dp" android:paddingTop="15dp" android:paddingBottom="15dp"/>
    <Button android:id="@+id/btnYuelist" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="音乐悦单" android:focusable="true" android:focusableInTouchMode="true"
         android:textSize="20sp" android:paddingLeft="90dp" android:paddingRight="90dp" android:paddingTop="15dp" android:paddingBottom="15dp"/>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/ett_search"
            android:layout_width="fill_parent"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:hint="搜索MV"
            android:drawableLeft="@drawable/search"/>
        <Button 
            android:id="@+id/btn_confirm"
            android:layout_width="fill_parent"
            android:layout_weight="0.7"
            android:layout_height="wrap_content"
            android:text="确定"/>
    </LinearLayout>
        
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
            <TextView 
                android:text="艺人地区"
                android:gravity="center"
                android:layout_marginTop="1dip"
                android:layout_marginBottom="1dip"
                android:paddingTop="10dip"
                android:textSize="22sp"
                android:layout_width="fill_parent"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
             <Spinner 
                android:id="@+id/artist_area"
                android:spinnerMode="dialog"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                /> 
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
                android:text="艺人类别"
                android:gravity="center"
                android:layout_marginTop="1dip"
                android:layout_marginBottom="1dip"
                android:paddingTop="10dip"
                android:textSize="22sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textColor="#000000"/>
             <Spinner 
                android:id="@+id/artist_sort"
                android:layout_width="fill_parent"
                android:layout_weight="0.4"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content"
                /> 
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
                android:text="视频分类"
                android:gravity="center"
                android:layout_marginTop="1dip"
                android:layout_marginBottom="1dip"
                android:paddingTop="10dip"
                android:textSize="22sp"
                android:layout_width="fill_parent"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
             <Spinner 
                android:id="@+id/video_sort"
                android:layout_width="fill_parent"
                android:layout_weight="0.4"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content"
                /> 
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
                android:text="排序方式"
                android:gravity="center"
                android:layout_marginTop="1dip"
                android:layout_marginBottom="1dip"
                android:paddingTop="10dip"
                android:textSize="22sp"
                android:layout_width="fill_parent"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
             <Spinner 
                android:id="@+id/sort_way"
                android:layout_width="fill_parent"
                android:layout_weight="0.4"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content"
                /> 
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView 
                android:text="清晰度"
                android:gravity="center"
                android:layout_marginTop="1dip"
                android:layout_marginBottom="1dip"
                android:paddingTop="10dip"
                android:textSize="22sp"
                android:layout_width="fill_parent"
                android:layout_weight="0.6"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
             <Spinner 
                android:id="@+id/definition"
                android:layout_width="fill_parent"
                android:layout_weight="0.4"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content"
                android:nextFocusDown="@+id/btn_ok"
                /> 
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >
             <Button 
                android:id="@+id/btn_ok"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dip"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:text="确定"
                android:nextFocusRight="@+id/btn_cancel"/>
            <Button 
                android:id="@+id/btn_cancel"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_toRightOf="@id/btn_ok"
                android:layout_marginLeft="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#000000"
                android:nextFocusLeft="@+id/btn_ok"/>
     </LinearLayout>
</LinearLayout>
</LinearLayout>